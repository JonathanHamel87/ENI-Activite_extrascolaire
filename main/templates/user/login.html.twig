{%  extends 'layout.html.twig' %}

{% block title %} Sign Up {% endblock %}
{% block main %}
    <section class="d-flex justify-content-center min-vh-section">
        <form action="" method="post" class="h-100 m-auto w-25 rounded">
            <div class="form-row ml-2 mt-2">
                <label for="pseudo" class="col-4 col-form-label">Pseudo :</label>
                <input type="text" name="pseudo" id="pseudo" class="col-6 form-control">
            </div>

            <div class="form-row ml-2 mt-2">
                <label for="motPasse" class="col-4 col-form-label">Mot de passe :</label>
                <input type="password" name="motPasse" id="motPasse" class="col-6 form-control">
            </div>

            <div class="form-row ml-2 mt-2">
                <button class="btn btn-success col-4 mt-2 mb-2" type="submit">Connexion</button>
                <div class="d-flex flex-column justify-content-center m-auto col-6">
                    <div class="form-check-inline">
                        <input type="checkbox" id="remember_me" name="_remember_me" class="form-check-input mt-1">
                        <label for="remember_me" class="form-check-label">Se souvenir de moi</label>
                    </div>
                    <a class="alert-link" id="lost-password">Mot de passe oubli√©</a>
                </div>
            </div>
        </form>
    </section>
{% endblock %}
